//Proyecto RADAR
#include <Servo.h>
const int trigPin = 10;
const int echoPin = 11;
const int potpin = A0; 
const int pulsPin = 8; 
int Velocidad_D;    
int Estado_Boton = 0;
int Escala = 0;
long duracion;
int distancia;
Servo myServo;
void setup() {
  pinMode(trigPin, OUTPUT); 
  pinMode(echoPin, INPUT);
  pinMode(pulsPin, INPUT);
  Serial.begin(9600);
  myServo.attach(9);
}
void loop() {
  for(int i=15;i<=165;i++){  
  myServo.write(i);
  delay(Velocidad_D);
  distancia = calculateDistancia();
  Serial.print(i); 
  Serial.print(","); 
  Serial.print(distancia);
  Serial.print(","); 
  Serial.print(Conmutar_boton());
  Serial.print(","); 
  Serial.print(Conmutar_boton());
  Serial.print(".");
  }
  for(int i=165;i>15;i--){  
  myServo.write(i);
  delay(Velocidad_D);
  distancia = calculateDistancia();
  Serial.print(i);
  Serial.print(",");
  Serial.print(distancia);
  Serial.print(".");
  }
}
int calculateDistancia(){
  digitalWrite(trigPin, LOW); 
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH); 
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  duracion = pulseIn(echoPin, HIGH);
  distancia= duracion*0.034/2;
  return distancia;
}
int Velocidad(){
  Velocidad_D = analogRead(potpin);
  Velocidad_D = map(Velocidad_D, 0, 1023, 30, 200); 
  return Velocidad_D;
}
int Conmutar_Boton(){
  
  Estado_Boton = digitalRead(buttonPin);
  if (Estado_Boton){
    if (Escala >= 0 && Escala <3){
      Escala += 1;
    }
    else Escala = 0;
  } 
  delay(15);
  returnÂ Escala;
}
